@import './animation/*.styl'
@import './mixins/*.styl'
@import './variables/*.styl'
@import './buttons/*.styl'


normalize-css()
body 
    body-font()
    position-center()
    overflow hidden
    min-height: 100vh;
    background-color backgound-dark_color
    color text-dark_color
    animation_ion()
    .btn__switch-mode
        buttons_style()
    .box
        position: relative;
        background-color backgound-dark_color
        width 70%
        padding 10px 
    .box__container-text__dark, .box__container-text__light
        display none
        font-weight: 700;
        justify-content center
        transform-rotateY(360,0.9)
        animation_transition_delay(10)
    .box__container-text__dark:is(.active), 
    .box__container-text__light:is(.active)
        display flex
        .latter
            font-size 3rem;
    .some-text__lorem-ipsum
        text-align center