@import './animation/*.styl'
@import './mixins/*.styl'
@import './variables/*.styl'
@import './buttons/*.styl'

:root
    --color-background #FCEBCC
    --color-border #523634
    --color-text #301b28
    --color-ion-1 #ddc5a2
    --color-ion-2 #F0D6AB

.dark-style
    --color-background #523634
    --color-border #301b28
    --color-text #FCEBCC
    
normalize-css()
body 
    body-font()
    position-center()
    overflow hidden
    min-height: 100vh;
    background-color var(--color-background)
    color var(--color-text)
    animation_ion()
    .btn__switch-mode
        buttons_style()
    .box
        position: relative;
        background-color var(--color-background)
        width 70%
        padding 10px 
    .box__container-text__dark, .box__container-text__light
        display none
        font-weight: 700;
        justify-content center
        transform-rotateY(360,0.9)
        animation_transition_delay(10)
    .box__container-text__dark:is(.active), 
    .box__container-text__light:is(.active)
        display flex
        .latter
            font-size 3rem;
    .some-text__lorem-ipsum
        text-align center