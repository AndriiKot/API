@import './mixins/*.styl'
@import './variables/*.styl'


// normalize-css()
reset()
body 
    body-font()
    user-select none
    background-color: #2c7580;
    height: 100%;
    padding: 10px 30px;
    font-size: 30px;

li 
    list-style-type: none;

// Stylus
.wrapper__app-open-meteo 
    width: 400px;
    display: grid;
    flex-wrap: wrap;
    gap: 10px 0;
    padding: 5px;
    border: 5px groove gray;
    text-align: center;

// tabs
.tab-list__app-open-meteo {
    display: flex;
    gap: 10px;
    width: 100%;
    cursor: pointer;
}

.tab-item__app-open-meteo__1,
.tab-item__app-open-meteo__2,
.tab-item__app-open-meteo__3 {
    flex-grow: 1;
    width: 50px;
    padding: 5px;
    background: gray;
    transition: width 0.5s;
}

.tab-list__app-open-meteo .is-active {
    width: 80px;
    background: aqua;
}

// content
.content-list__app-open-meteo {
    width: 100%;
    border: 2px solid black;
}
 
.content-item__app-open-meteo__1,
.content-item__app-open-meteo__2,
.content-item__app-open-meteo__3 {
    display: none
    height: 200px;
    line-height: 200px;
    background: gray;
}

.content-list__app-open-meteo .is-active
    display block

