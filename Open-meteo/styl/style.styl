@import './mixins/*.styl'
@import './variables/*.styl'


reset()

body 
    display grid
    justify-content center
    body-font()
    height 100%
    user-select none
    background-color #2c7580
    padding 10px 30px         
    font-size 30px

li 
    list-style-type none

.wrapper__app-open-meteo 
    width 90vw
    display flex
    flex-wrap wrap
    gap 10px 0
    padding 5px
    border 5px groove gray
    text-align center

// tabs
.tab-list__app-open-meteo 
    display grid
    justify-content space-evenly
    grid-template-columns repeat(3, 25%)
    gap 3%
    width 100%
    cursor pointer


.tab-item__app-open-meteo__1,
.tab-item__app-open-meteo__2,
.tab-item__app-open-meteo__3 
    flex-grow 1
    width 100%
    padding 2%
    background gray
    transition width 0.5s


.tab-list__app-open-meteo .is-active 
    background aqua
    

// content
.content-list__app-open-meteo 
    width 100%
    border 2px solid black

 
.content-item__app-open-meteo__1,
.content-item__app-open-meteo__2,
.content-item__app-open-meteo__3 
    display none;
    height 80dvh;
    line-height 200px;
    background gray


.content-list__app-open-meteo .is-active
    display block

